  <div class="ui icon dropdown top right button" id="menu">
    <i class="settings icon"></i> {{t 'settings'}}
    <div class="menu">
      <div class="item" {{action 'toggleCustomQuantities'}}>
        <div class="ui read-only checkbox">
          {{input type="checkbox" checked=civ.settings.customIncr title="Custom Quantity"}}
          <label>Use Custom Quantities</label>
        </div>
      </div>
      <div class="item" {{action 'toggleDelimiters'}}>
        <div class="ui read-only checkbox">
          {{input type="checkbox" checked=civ.settings.delimiters title="Toggle Delimiters"}}
          <label>Number Delimiters</label>
        </div>
      </div>
      <div class="item" {{action 'toggleNotes'}}>
        <div class="ui read-only checkbox">
          {{input type="checkbox" checked=civ.settings.notes title="Toggle Notes"}}
          <label>Show Notes</label>
        </div>
      </div>
      <div class="ui divider"></div>
      <div class="item" {{action 'toggleAutosave'}}>
        <div class="ui read-only checkbox">
          {{input type="checkbox" checked=civ.settings.autosave title="Autosave"}}
