<div id="conquestPane">
  <span id="standardRow"></span>
  <div id="conquest">
    <h4>Army</h4>
    <p id="customPartyQuantity">
      Custom Quantity <input id="partyCustomQty" type="number" min="1" step="1" value="1000" />
    </p>
    <table id="party"></table>
    <br />
    <div id="raidGroup">
      <h4>To War!</h4>
      <p id="gloryGroup">
        Glory: <span id="gloryTimer">0</span> seconds remain
      </p>
      <div class="ui vertical buttons">
      {{#each civ.civSizes as |elem|}}
        <button class='fluid mini compact ui button raid' data-target='{{elem.id}}' disabled='disabled' onmousedown= {{action "onInvade" target=civ}}>
          Raid {{{elem.name}}}
        </button>
      {{/each}}
      </div>
    </div>
    <div id="victoryGroup">
      <h4>Victory!</h4>
      <button class="fluid compact ui button" id="plunder" onmousedown="plunder()">Plunder Resources</button><br />
    </div>
  </div>
</div>
