<div id="impexp">
  <textarea id="impexpField"></textarea>
  <button id="ui button expButton" onclick="save('export')">Export</button>
  <button id="ui button expSelect" onclick="document.getElementById('impexpField').select();">Select All</button>
  <button id="ui button impexpClose" onclick="impExp()">Close</button>
  <button id="ui button impButton" onclick="load('import')">Import</button>
</div>

<div class="ui grid">
  <div class="twelve wide column">
    {{civ-header}}
  </div>
  <div class="four wide column">
    <div id="strip">
      <div id="stripInner">
        <a href="civFAQ.html" target="_blank">FAQ / Instructions / Bugfixing</a><br/>
        <a href="civUpdates.html" target="_blank">Game Updates Log</a><br/>
        <a href="#" onclick="impExp()">Import/Export Save</a>
        <span id="versionAlert"> - <span id="newVersionText" onclick="location.reload()">New Version Available</span></span>
      </div>
    </div>
  </div>
  <div class="eight wide column">
    {{basic-resources}}
    {{special-resources}}
    <div class="compact ui mini pointing secondary stackable menu">
      <a class="brown item active" data-tab="buildingsPane">Buildings</a>
      <a class="teal item" data-tab="upgradesPane">Upgrades</a>
      <a class="purple item" data-tab="deityPane">Deity</a>
      <a class="red item" data-tab="conquestPane">Conquest</a>
      <a class="yellow item" data-tab="tradePane">Trade</a>
      <a class="green item" data-tab="achievementsPane">Achievements</a>
      <a class="gray item" data-tab="settingsPane">Settings</a>
    </div>
    <div class="ui bottom attached tab segment active" data-tab="buildingsPane">
      {{buildings-pane}}
    </div>
    <div class="ui bottom attached tab segment" data-tab="upgradesPane">
      {{upgrades-pane}}
    </div>
    <div class="ui bottom attached tab segment" data-tab="deityPane">
      {{diety-pane}}
    </div>
    <div class="ui bottom attached tab segment" data-tab="conquestPane">
      {{conquest-pane}}
    </div>
    <div class="ui bottom attached tab segment" data-tab="tradePane">
      {{trade-pane}}
    </div>
    <div class="ui bottom attached tab segment" data-tab="achievementsPane">
      {{achievements-pane}}
    </div>
    <div class="ui bottom attached tab segment" data-tab="settingsPane">
      {{settings-pane}}
    </div>
  </div>
  <div class="eight wide column">
    {{population-container}}
    {{jobs-container}}
    {{trade-container}}
    {{events-container}}
    {{deity-container}}
    {{wonders-container}}
    {{stats-container}}
  </div>
</div>

{{outlet}}
